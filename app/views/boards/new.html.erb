

<div class="album py-5 bg-light">
  <div class="container">

    <div class="sidenav">
      <div class="login-main-text">
        <h2>Aplication<br>Make a new board</h2>
      </div>
    </div>

    <%= form_with model: @board do |f| %>

      <div class="main">
        <div class="col-md-6 col-sm-12">
          <div class="login-form">

            <div class="form-group">
              <%= f.label :name %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "Name", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :path %><br />
              <%= f.text_field :path, autofocus: true, autocomplete: "URL", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :image %><br />
              <%= f.file_field :image, autofocus: true, autocomplete: "Image", class: "form-control" %>
            </div>

          </div>
        </div>
      </div>

      <%= f.submit "Make", class: "btn btn-sm btn-secondary" %>
      
    <% end %>

  </div>
</div>


