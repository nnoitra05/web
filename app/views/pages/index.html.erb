

<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">Album example</h1>
    <p class="lead text-muted">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
    <p>
      <%= link_to 'Play sandbox', sandbox_pages_path, class: 'btn btn-primary my-2' %>
      <%= link_to 'Secondary action', root_path, class: 'btn btn-secondary my-2' %>
    </p>
  </div>
</section>

<div class="album py-5 bg-light">
  <div class="container">

    <div class="row">
      
      <% @boards.each_with_index do |board, idx| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <%= image_tag board.image, class: "img-fluid rounded mx-auto d-block" %>
            <div class="card-body">
              <p class="card-text"><%= board[:name] %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= button_to "View", board[:path], class: "btn btn-sm btn-outline-secondary" %>
                  <%= button_to "Delete", board_path(board[:id]), method: :delete, class: "btn btn-sm btn-outline-secondary" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <%= image_tag "plus.png", class: "img-fluid rounded mx-auto d-block" %>
          <div class="card-body">
            <p class="card-text">Add an board</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= button_to "Add", new_board_path, method: :get, class: "btn btn-sm btn-outline-dark" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


